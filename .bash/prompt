    export LP_ENABLE_PERM=0
    export LP_ENABLE_SHORTEN_PATH=1
    export LP_ENABLE_PROXY=1
    export LP_ENABLE_JOBS=0
    export LP_ENABLE_LOAD=1
    export LP_ENABLE_BATT=0
    export LP_ENABLE_GIT=1
    export LP_ENABLE_HG=1
    export LP_ENABLE_BZR=0
    export LP_ENABLE_FOSSIL=0
    export LP_ENABLE_VCS_ROOT=0
    export LP_ENABLE_TITLE=0
    export LP_ENABLE_SSH_COLORS=1
    export LP_ENABLE_RUNTIME=0
    export LP_ENABLE_SUDO=1
    export LP_ENABLE_FQDN=1
    export LP_ENABLE_TIME=0

    export LP_BATTERY_THRESHOLD=75
    export LP_LOAD_THRESHOLD=75
    export LP_PATH_THRESHOLD=50
    export LP_HOSTNAME_ALWAYS=1
    export LP_USER_ALWAYS=1
    source "$HOME/.bash/liquidprompt/liquidprompt"
fi
